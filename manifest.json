

{
  "manifest_version": 3,
  "name": "YT Auto Queue",
  "description": "This extension saves your YouTube queue to a text file on your computer",
  "version": "1.0",
  "icons": {
    "16": "icon/icon_cropped_16.png",
    "32": "icon/icon_cropped_32.png",
    "48": "icon/icon_cropped_48.png",
    "128": "icon/icon_cropped_128.png"
    },
  "permissions": ["downloads", "scripting"],
  "host_permissions": ["*://www.youtube.com/*"],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["scripts/content.js"]
    }
  ]
}
